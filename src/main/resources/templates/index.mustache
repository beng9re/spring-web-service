{{>layout/header}}
    <h1>스프링 부트로 시작하는 웹 서비스_v2</h1>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글등록</a>
                {{#userName}}
                    Logged in as : <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">LogOut</a>
<!--                    스프링 시큐리티 로그아웃 기본 URL-->
                {{/userName}}
<!--                머스테치 존재하지 않은경우-->
                {{^userName}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">
                        Google Login
                    </a>

                    <a href="/oauth2/authorization/naver" class="btn btn-success active" role="button">
                        Naver Login
                    </a>
                {{/userName}}
            </div>
        </div>
    </div>
    {{! 목록출력  }}
    <br>
    <table class="table table-horizontal table-borderd">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>

        <tbody id ="tbody">
            <!--LIST 순회-->
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
        </tbody>
    </table>

{{>layout/footer}}

